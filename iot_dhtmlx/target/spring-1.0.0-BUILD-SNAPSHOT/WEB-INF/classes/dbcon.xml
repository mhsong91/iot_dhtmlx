<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	<context:property-placeholder location="dbconf.properties"/>
	
	<bean id="ds" class="org.apache.commons.dbcp2.BasicDataSource">
		<property name="driverClassName" value="${driver}"/>
		<property name="url" value="${url}"/>
		<property name="username" value="${id}"/>
		<property name="password" value="${pwd}"/>
		<property name="initialSize" value="${max}"/>
		<property name="maxTotal" value="${max}"/>
		<property name="minIdle" value="${max}"/>
		<property name="maxIdle" value="${max}"/>
		<property name="maxWaitMillis" value="${wait}"/>
	</bean>
	
	
	<bean id="jt" class="org.springframework.jdbc.core.JdbcTemplate" >
		<property name="dataSource" ref="ds"></property>
	</bean>
	
	
	<bean id="edao" class="com.iot.spring.EmpDAO">
		<property name="jdbcTemplate"> 
			<ref bean="jt"/>
		</property>
	</bean>
	
	
	<context:component-scan base-package="com.iot.spring"></context:component-scan>

</beans>
